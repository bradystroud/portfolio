@inherits AppComponentBase
@inject IContentService _contentService

@((MarkupString) _content)

@code {

    [Parameter]
    public MarkdownContent ContentName { get; set; }
    
    private string _content = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        _content = ContentName switch
        {
            MarkdownContent.HomePage => await _contentService.GetHomePageContent(),
            // MarkdownContent.Blog => await _contentService.GetBlog(),
            _ => _content
            };
    }
}