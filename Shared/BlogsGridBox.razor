<GridBoxBase Name="@Name" Description="@Description" Url="@Url" Icon="@Icons.Filled.Newspaper">
    <p>@Date.ToString("dd MMMM yyyy")</p>
</GridBoxBase>


@code {
    [Parameter]
    public string Name { get; set; } = string.Empty;

    [Parameter]
    public string Description { get; set; } = string.Empty;

    [Parameter]
    public DateOnly Date { get; set; }

    [Parameter]
    public string Url { get; set; } = string.Empty;
}